{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Required for project references
    "composite": true,

    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Needed for inversify
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
