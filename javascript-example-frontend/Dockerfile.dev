# syntax=docker/dockerfile:1

ARG NODE_VERSION=22.19.0
ARG PNPM_VERSION=10.17.1

FROM node:${NODE_VERSION}-alpine

# Set working directory
WORKDIR /usr/src/app

# Install pnpm
RUN --mount=type=cache,target=/root/.npm \
    npm install -g pnpm@${PNPM_VERSION}

# Copy workspace config files from root context
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy package.json for frontend
COPY javascript-example-frontend/package.json ./javascript-example-frontend/

# Install dependencies for this package only
RUN --mount=type=cache,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile --filter javascript-example-frontend

# Copy the rest of the source code
COPY javascript-example-frontend ./javascript-example-frontend

# Set working directory to the frontend package
WORKDIR /usr/src/app/javascript-example-frontend

# Expose the port used by the Vite development server
EXPOSE 5173

# Use a default command, can be overridden in Docker compose.yml file
CMD ["pnpm", "run", "dev"]
